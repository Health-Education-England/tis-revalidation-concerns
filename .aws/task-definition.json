{
  "containerDefinitions": [
    {
      "name": "concerns",
      "image": "430723991443.dkr.ecr.eu-west-2.amazonaws.com/tis-revalidation-concerns:latest",
      "portMappings": [
        {
          "containerPort": 8087
        }
      ],
      "environment": [
        {
          "name": "TITLE",
          "value": "tis-revalidation-concerns"
        },
        {
          "name": "AWS_REGION",
          "value": "eu-west-2"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "awslogs-tis-revalidation-concerns",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "awslogs-tis-revalidation-concerns"
        }
      },
      "secrets": [
        {
          "name": "MONGODB_HOST",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/reval-mongo-host"
        },
        {
          "name": "MONGODB_PORT",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/reval-mongo-port"
        },
        {
          "name": "MONGODB_USERNAME",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/reval-mongo-user"
        },
        {
          "name": "MONGODB_PASSWORD",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/reval-mongo-password"
        },
        {
          "name": "REVALIDATION_URL",
          "valueFrom": "arn:aws:ssm:eu-west-2:430723991443:parameter/reval-be-url"
        }
      ]
    }
  ],
  "executionRoleArn": "ecsTaskExecutionRole",
  "family": "concerns",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "1024"
}
